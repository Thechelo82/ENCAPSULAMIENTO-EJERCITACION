class Juego:
    def __init__(self, nombre, genero, precio):
        self.nombre = nombre
        self.genero = genero
        self.precio = precio

    def mostrar_informacion(self):
        return f"{self.nombre} ({self.genero}) - ${self.precio}"

    def esta_en_oferta(self, precio_oferta):
        return self.precio < precio_oferta
